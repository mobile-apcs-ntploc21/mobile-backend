{
  "name": "root",
  "version": "1.0.0",
  "scripts": {
    "install:api": "npm --prefix ./api install",
    "install:apollo": "npm --prefix ./apollo install",
    "install:all": "npm run install:api && npm run install:apollo",
    "start:api": "npm --prefix ./api start",
    "start:api:dev": "npm --prefix ./api run start:dev",
    "start:apollo": "npm --prefix ./apollo start",
    "start:apollo:dev": "npm --prefix ./apollo run start:dev",
    "start": "concurrently \"npm run start:api\" \"npm run start:apollo\"",
    "start:dev": "concurrently \"npm run start:api:dev\" \"npm run start:apollo:dev\""
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}
