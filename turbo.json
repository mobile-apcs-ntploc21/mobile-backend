{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "build": {
      "cache": true,
      "persistent": false
    },
    "start": {
      "dependsOn": ["build"]
    },
    "prettier": {
      "cache": false,
      "persistent": false
    },
    "prettier-fix": {
      "cache": false,
      "persistent": false
    }
  }
}
